<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee" version="3.0">
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
            classpath:context.xml
        </param-value>
  </context-param>
  <servlet>
    <servlet-name>CXFServlet</servlet-name>
    <servlet-class>
            org.apache.cxf.transport.servlet.CXFServlet
        </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <description>
    	</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.wk.querytagger.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>
    	</description>
    <display-name>GetUserFoldersServlet</display-name>
    <servlet-name>GetUserFoldersServlet</servlet-name>
    <servlet-class>com.wk.querytagger.servlets.GetUserFoldersServlet</servlet-class>
  </servlet>
  <servlet>
    <description>
    	</description>
    <display-name>GoldenAnswerSetsServlet</display-name>
    <servlet-name>GoldenAnswerSetsServlet</servlet-name>
    <servlet-class>com.wk.querytagger.servlets.GoldenAnswerSetsServlet</servlet-class>
  </servlet>
  <servlet>
    <description>
    	</description>
    <display-name>QueryPhrasesServlet</display-name>
    <servlet-name>QueryPhrasesServlet</servlet-name>
    <servlet-class>com.wk.querytagger.servlets.QueryPhrasesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login_servlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetUserFoldersServlet</servlet-name>
    <url-pattern>/get_user_folders</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoldenAnswerSetsServlet</servlet-name>
    <url-pattern>/golden_answer_sets</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QueryPhrasesServlet</servlet-name>
    <url-pattern>/query_phrases</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>
</web-app>